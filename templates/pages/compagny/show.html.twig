{% block title %}Compagny{% endblock %}

{% block body %}
    <h1>Compagny</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ compagny.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ compagny.name }}</td>
            </tr>
