{% block title %}Criteria{% endblock %}

{% block body %}
    <h1>Criteria</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ criterion.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ criterion.name }}</td>
